apiVersion: v1
kind: Secret
metadata:
  name: davinci-doc-secrets
  namespace: doc-generator
type: Opaque
stringData:
  flask-secret-key: "generate-random-secure-string-here"
  test-api-key: "test-key-for-health-checks"
  azure-tenant-id: "your-tenant-id"
  azure-client-id: "your-client-id"
  azure-client-secret: "your-client-secret"
  docusign-integration-key: "your-integration-key"
  docusign-user-id: "your-user-guid"
  docusign-account-id: "your-account-id"
  docusign-counter-signer-email: "signer@davincisolutions.ai"
  docusign-counter-signer-name: "Internal Signer Name"
  docusign-base-path: "https://demo.docusign.net/restapi"
  docusign-oauth-host: "account-d.docusign.com"
  # DocuSign private key (RSA key for JWT authentication)
  # Generate using: docusign-admin (or from Developer Console)
  docusign-private-key: |
    -----BEGIN RSA PRIVATE KEY-----
    your-multi-line-private-key-here
    -----END RSA PRIVATE KEY-----